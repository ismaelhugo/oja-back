{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pnpm install --store-dir .pnpm-store && pnpm run build"
  },
  "deploy": {
    "startCommand": "pnpm run start:with-migrations",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}